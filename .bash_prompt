# This is a copy of some smart guy's .bash_prompt to make it colorful. Kudos to those who
# made and modified it.
# - Uthpala Herath
#
# @gf3's Sexy Bash Prompt, inspired by “Extravagant Zsh Prompt”
# Shamelessly copied from https://github.com/gf3/dotfiles
# Screenshot: http://i.imgur.com/s0Blh.png

# Color setup
if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
  export TERM=gnome-256color
elif infocmp xterm-256color >/dev/null 2>&1; then
  export TERM=xterm-256color
fi

if tput setaf 1 &> /dev/null; then
  tput sgr0 >/dev/null
  if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
    MAGENTA=$(tput setaf 125)
    ORANGE=$(tput setaf 166)
    GREEN=$(tput setaf 64)
    PURPLE=$(tput setaf 61)
    WHITE=$(tput setaf 244)
  else
    MAGENTA=$(tput setaf 5)
    ORANGE=$(tput setaf 4)
    GREEN=$(tput setaf 2)
    PURPLE=$(tput setaf 1)
    WHITE=$(tput setaf 7)
  fi
  BOLD=$(tput bold)
  RESET=$(tput sgr0)
else
  MAGENTA="\033[1;31m"
  ORANGE="\033[1;33m"
  GREEN="\033[1;32m"
  PURPLE="\033[1;35m"
  WHITE="\033[1;37m"
  BOLD=""
  RESET="\033[m"
fi

export MAGENTA ORANGE GREEN PURPLE WHITE BOLD RESET

# Only define prompt for interactive shells
if [[ $- == *i* ]]; then
  parse_git_dirty() {
    git rev-parse --git-dir >/dev/null 2>&1 || return
    if [[ -n "$(git status --porcelain 2>/dev/null)" ]]; then
      echo "*"
    fi
  }

  parse_git_branch() {
    git rev-parse --git-dir >/dev/null 2>&1 || return
    branch=$(git symbolic-ref --quiet --short HEAD 2>/dev/null \
             || git describe --tags --always 2>/dev/null)
    [[ -n "$branch" ]] && printf "%s%s" "$branch" "$(parse_git_dirty)"
  }

  git_on() {
    git rev-parse --is-inside-work-tree >/dev/null 2>&1 && echo " on "
  }

  export PS1="\[${BOLD}${MAGENTA}\]\u \[$WHITE\]at \[$ORANGE\]\h \[$WHITE\]in \[$GREEN\]\w\[$WHITE\]\$([ -n \"\$(git rev-parse --is-inside-work-tree 2>/dev/null)\" ] && echo \" on \")\[$PURPLE\]\$(parse_git_branch)\[$WHITE\]\n\$ \[$RESET\]"
  export PS2="\[$ORANGE\]→ \[$RESET\]"
  PROMPT_COMMAND='echo'
fi
